# Multi-stage build for Vite React client
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
# Install all deps to build client; you may tailor with workspaces if needed
RUN npm ci || npm install
COPY . ./
RUN npm run build

FROM nginx:1.27-alpine
COPY --from=build /app/dist /usr/share/nginx/html
# Basic static nginx config
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
